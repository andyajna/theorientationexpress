<%= simple_form_for(@answer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :answer_text %>
    <%= f.input :value %>
    <%= f.input :reason %>
    <%= f.association :question %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
